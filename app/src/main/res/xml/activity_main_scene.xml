<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="100"
               android:scaleX="3" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="30"
               android:scaleY="1.5" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="15"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="15"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="30"
               android:scaleX="1.5" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="50"
               android:scaleY="2" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="75"
               android:scaleY="2.5" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="50"
               android:scaleX="2" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="100"
               android:scaleY="3" />
           <KeyAttribute
               motion:motionTarget="@+id/image"
               motion:framePosition="75"
               android:scaleX="2.5" />
           <KeyAttribute
               motion:motionTarget="@+id/imageview"
               motion:framePosition="0"
               android:scaleX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/imageview"
               motion:framePosition="0"
               android:scaleY="1" />
       </KeyFrameSet>
        <OnClick />
        <OnSwipe motion:maxAcceleration="0.1"
            motion:maxVelocity="6.67" />
    </Transition>

    <ConstraintSet>
        <Constraint
            motion:layout_constraintVertical_bias="0.521"
            android:layout_height="365dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.557"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="288dp"
            android:id="@+id/imageview"
            motion:layout_editor_absoluteY="208dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>